{
  "name": "Summarizer",
  "version": "1.0",
  "description": "Summarizes articles.",
  "permissions": ["activeTab", "tabs", "storage", "identity", "cookies"],
  "host_permissions": ["www.untanglify.com/"],
  "icons": { "128": "images/icon_128.png" },
  "key": "",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize an article!",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "jsrsasign-all-min.js"]
    }
  ],
  "manifest_version": 3
}
